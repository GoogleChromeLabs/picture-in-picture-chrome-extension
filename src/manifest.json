{
  "name": "Picture-in-Picture Extension for Babylon",
  "description": "Use this extension to pop out video for appointments. By Chris",
  "version": "1.8",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "minimum_chrome_version": "69.0.3483.0",
  "manifest_version": 2
}
